# exports

export MYSYS_PATH=~/.mysys
export MYSYS_BIN="${MYSYS_PATH}/bin"
export MYSYS_ENV="${MYSYS_PATH}/env"
export PATH="${MYSYS_BIN}:${PATH}"

# sourcing variables and secrets
. "$MYSYS_ENV/.variables"
. "$MYSYS_ENV/.secrets"

# doing some initial setup
$MYSYS_BIN/.mysys_basic_reqs.sh

# add tools
if [ -f "$MYSYS_BIN/.mysys_tools.sh" ] ; then
  $MYSYS_BIN/.mysys_tools.sh
fi


# handy aliases
alias k=kubectl

